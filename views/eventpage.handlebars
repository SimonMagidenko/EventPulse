<header>
    {{!-- Banner for the Category--}}
    <div class="relative bg-cover bg-center h-64" style="background-image: {{bannerURL}}">
        <!-- Banner content goes here -->
        <div class="absolute inset-0 flex items-center justify-center bg-opacity-75 bg-gray-900 text-white"></div>
        <h1>{{classification}}</h1>
    </div>
    </div>
</header>
<img src='{{imageURL}}'>
<div>
    <h3>{{event}}</h3>
    <h3>{{date}}</h3>
    <h4>{{venue}}
        <br>{{address}}
        <br>{{city}},{{state}} {{zip}}
    </h4>
</div>
</div>



<div>
    <br>
    <h3>
        Event Details:
    </h3>
    <p>Details Here</p>
    <br>

    <h5>
        Ticket Information:
    </h5>
    <p>Price Ranges: {{price.min}} - {{price.max}}</p>
    <br>

    <img src={{seatMap}} alt="Seat Map">
    <p> For ticket availability visit Ticket Master: <a href='{{ticketmaster_url}}'>Click Here</a></p>
</div>

<button id="save-btn">Save Event</button>

{{!-- Popup for When Event is Saved --}}
<div id="popup" class="popup">
    <div class="popup-content">
        <span class="close-button" id="closeButton">&times;</span>
        <p>Event saved</p>
    </div>
</div>



<script src="/js/eventpage.js"></script>