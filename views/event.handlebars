<h1>Events for ticket classification: {{classification_name}}</h1>

<div style="margin-left: 50px">
  {{#each events}}
  <div style="margin-bottom: 30px; padding: 10px">
    <img style="max-height: 100px; margin-top: 10px; margin-bottom: 10px;" src={{imageUrl}} alt="Event image"></img>
    <div>
      <h2>{{name}}</h2>
      <div> Start Date: {{start_date}}</div>
    </div>
    <button class="btn btn-blue dynamicButton" data-id={{id}} data-name={{name}}>
      {{!--  <a href="http://localhost:3001/eventpage/{{id}}?ticketmaster_event_id={{id}}&classification_id={{classification_id}}"></a> --}}
      <a href="http://localhost:3001/eventpage/{{id}}?classification_id={{classification_id}}">
        See Details
      </a>
    </button>
  </div>
  {{/each}}
</div>



<script src="/js/events.js"></script>